<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.securityfieldofficer">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/dss_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dss_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.SecurityFieldOfficer">
        <activity android:name=".Unplanned_Visits"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name=".LocationDemo"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Save_Location"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Visit_Planned"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Home"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>